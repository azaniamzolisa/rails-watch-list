<div class="container">
  <h1>Edit List</h1>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :background_image_url, label: 'Background Image URL' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
</div>
